---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<header>
  <div>
    <h2>
      {SITE_TITLE}
    </h2>
    <h4>
      {SITE_DESCRIPTION}
    </h4>
  </div>
	<nav>
		<HeaderLink href="https://twitter.com/virtuallyvivek" target="_blank">Twitter</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
    margin: 10px 0px 0px 0px;
	}
  h4 {
    margin: 0em;
    font-weight: 400;
  }
  nav {
    margin: 20px 0px 0px 0px;
  }
</style>
